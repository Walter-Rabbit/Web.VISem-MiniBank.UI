// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["linux-musl-openssl-3.0.x", "linux-musl"]
}

datasource db {
  provider      = "postgresql"
  url           = env("DATABASE_URL")
}

model Client {
  id              String    @id @unique
  name            String
  email           String    @unique
  birthDate       DateTime
  encodedPassword String
  accounts        Account[]
  credits         Credit[]
  deposits        Deposit[]
}

model Admin {
  id              String    @id @unique
  name            String
  email           String
  encodedPassword String
}

model Transaction {
  id                String  @id @unique
  amount            Float
  date              DateTime
  senderProductId   String
  receiverProductId String
}

model AccountDescription {
  id           String   @id @unique
  name         String    @unique
  description  String
  duration     DateTime
  limit        Float
  monthPercent Float
  price        Float
  accounts     Account[]
}

model CreditDescription {
  id          String      @id @unique
  name        String   @unique
  description String
  duration    DateTime
  amount      Float
  percent     Float
  credits     Credit[]
}

model DepositDescription {
  id          String       @id @unique
  name        String    @unique
  description String
  duration    DateTime
  limit       Float
  yearPercent Float
  deposits    Deposit[]
}

model Account {
  id             String             @id @unique
  description    AccountDescription @relation(fields: [descriptionId], references: [id])
  descriptionId  String
  owner          Client             @relation(fields: [ownerId], references: [id])
  ownerId        String
  amount         Float
  isActive       Boolean
  serviceEndDate DateTime
}

model Credit {
  id             String            @id @unique
  description    CreditDescription @relation(fields: [descriptionId], references: [id])
  descriptionId  String
  owner          Client            @relation(fields: [ownerId], references: [id])
  ownerId        String
  amount         Float
  moneyLeftToPay Float
  serviceEndDate DateTime
}

model Deposit {
  id             String             @id @unique
  description    DepositDescription @relation(fields: [descriptionId], references: [id])
  descriptionId  String
  owner          Client             @relation(fields: [ownerId], references: [id])
  ownerId        String
  amount         Float
  moneyPaid      Float
  serviceEndDate DateTime
}
